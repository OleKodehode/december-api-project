{
  "swagger": "2.0",
  "info": {
    "version": "v1.0.0",
    "title": "Entertainment Backlog S-T-S API",
    "description": "A service to service API providing an Entertainment/Media backlog service"
  },
  "host": "localhost:8000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/v1/health": {
      "get": {
        "description": "Server status",
        "responses": {
          "200": {
            "description": "Status OK\nTimestamp ISO String"
          },
          "404": {
            "description": "Since it's setup with localhost as of now, this shouldn't be possible to get but would be if it was an actual service running."
          }
        }
      }
    },
    "/v1/protected": {
      "get": {
        "description": "A test route for authorization",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "schema": {
              "type": "string",
              "example": "Bearer <TOKEN>"
            }
          },
          {
            "name": "x-refreshtoken",
            "in": "header",
            "schema": {
              "type": "string",
              "example": "TOKEN"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Message: You are authenticated\nUser Object with UserId & SID"
          },
          "401": {
            "description": "Unauthorized - Invalid Token"
          }
        }
      }
    },
    "/v1/auth/login": {
      "post": {
        "description": "Route to get authorized - Requires a valid username, password.\nAs of now, requires manually adding new users into userService on the server-side.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "example": "Test"
                },
                "password": {
                  "example": "TestPassword123"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/v1/auth/refresh": {
      "get": {
        "description": "Refreshing of Refresh JWT. Requires a valid x-refreshtoken.",
        "parameters": [
          {
            "name": "x-refreshtoken",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/v1/auth/logout": {
      "post": {
        "description": "Logs out a user. Requires a valid x-refreshtoken.",
        "parameters": [
          {
            "name": "x-refreshtoken",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content (Successfully logged out)"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/v1/entries/": {
      "get": {
        "description": "Gets all entries tied to a userId",
        "parameters": [
          {
            "name": "userId",
            "in": "body",
            "schema": {
              "type": "string",
              "example": "test-user-001"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "returns a JSON with backlog entries tied to a specific user."
          }
        }
      },
      "post": {
        "description": "Adds a new entry tied to a userId",
        "parameters": [
          {
            "name": "userId",
            "in": "body",
            "schema": {
              "type": "string",
              "example": "test-user-001"
            }
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "type": {
                  "example": "movie"
                },
                "title": {
                  "example": "Test Movie"
                },
                "status": {
                  "example": "planned"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Returns the created entry as a JSON"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/v1/entries/{id}": {
      "get": {
        "description": "Returns a specific entry tied to a SID/JWT - Requires authorization of that specific SID/JWT",
        "parameters": [
          {
            "name": "userId",
            "in": "body",
            "schema": {
              "type": "string",
              "example": "test-user-001"
            }
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns a JSON with the specific entry"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "patch": {
        "description": "Updates a specific entry by ID - Can only update entries tied to the same SID/JWT",
        "parameters": [
          {
            "name": "userId",
            "in": "body",
            "schema": {
              "type": "string",
              "example": "test-user-001"
            }
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {}
        ],
        "responses": {
          "200": {
            "description": "Returns a JSON with the updated entry"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "delete": {
        "description": "Deletes an entry tied to your SID/JWT",
        "parameters": [
          {
            "name": "userId",
            "in": "body",
            "schema": {
              "type": "string",
              "example": "test-user-001"
            }
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content (Successfully deleted)"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  }
}
